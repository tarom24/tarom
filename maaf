def print_decorated_message(SAYANGGG MAAFINN AKUU YAAAA):
    border = '*' * (len(SAYANGGG MAAFINN AKUU YAAAA) + 4)
    print(border)
    print(f"* {SAYANGGG MAAFINN AKUU YAAAA} *")
    print(border)

# Step 1: Display the initial apology message
initial_message = "sayanggggkuu cintakuuu, aku mau mintaa maaf banget soale ga aku check sekali lagii, itu beneran templatee sayangg, gaada maksud apapun sumpahh, aku mintaaa maaf bangett yaaaa, aku pantes dihukum sayangggg, maafinn akuuuu."
print_decorated_message(initial_message)

# Step 2: Ask for the name of the person to apologize to
name = input("Enter the name of the person you wish to apologize to: ")

# Step 3: Display the custom apology message with decoration
custom_message = f"aku minta maaf yaa {sayangkuuu} for my mistake."
print_decorated_message(custom_message)
